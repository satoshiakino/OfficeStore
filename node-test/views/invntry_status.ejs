<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compotible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <h1>AkinoStore</h1>
      <nav id="global_navi">
        <ul>
          <li><a href="/mst_menu">マスタ登録・修正</a></li>
          <li><a href="/arrvl_menu">仕入登録・修正</a></li>
          <li><a href="/sales_menu">売上登録・修正</a></li>
          <li><a href="/sales_check">売上確認</a></li>
          <li class="current"><a href="/inventory">在庫確認</a></li>
        </ul>
      </nav>
    </header>
    <div class="wrapper">
      <div align="center">
        <table rules="all">
            <tr>
                <td>月初在庫高</td>
                <td><%= inventory[0].stock_value %></td>
            </tr>
            <tr>
                <td>仕入高</td>
                <td><%= parseInt(arrival[0].total_stock_value) %></td>
            </tr>
            <tr>
                <td>現在在庫高</td>
                <td><%= inventory2[0].stock_value %></td>
            </tr>
        </table>
        <br>
        <table rules="all">
          <tr>
            <th>商品名</th>
            <th>在庫数</th>
          </tr>
          <% invntryList.forEach(function(invntryItem){ %>
            <tr class="main-list__item">
              <td class="invntry_status__prdct_nm"><%= invntryItem.prdct_nm %></td>
              <td class="invntry_status__trade_num"><%= invntryItem.trade_num %></td>
            </tr>
          <% }); %>
        </table>
      </div>
    </div>
  </body>
</html>
