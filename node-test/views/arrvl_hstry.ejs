<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compotible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <h1>AkinoStore</h1>
      <nav id="global_navi">
        <ul>
          <li><a href="/mst_menu">マスタ登録・修正</a></li>
          <li class="current"><a href="/arrvl_menu">仕入登録・修正</a></li>
          <li><a href="/sales_menu">売上登録・修正</a></li>
          <li><a href="/sales_check">売上確認</a></li>
          <li><a href="/inventory">在庫確認</a></li>
        </ul>
      </nav>
    </header>
    <div class="wrapper">
        <div align="center">
          <table rules="all">
            <tr>
              <th>ID</th>
              <th>カテゴリコード</th>
              <th>カテゴリ名</th>
              <th>JAN</th>
              <th>商品名</th>
              <th>原価</th>
              <th>個数</th>
              <th>登録日</th>
            </tr>
            <% arrvlList.forEach(function(arrvlItem){ %>
              <tr class="main-list__item">
                <td class="arrvl__arrvl_id"><%= arrvlItem.arrvl_id %></td>
                <td class="arrvl__cat_cd"><%= arrvlItem.cat_cd %></td>
                <td class="arrvl__cat_nm"><%= arrvlItem.cat_nm %></td>
                <td class="arrvl__jan"><%= arrvlItem.jan %></td>
                <td class="arrvl__prdct_nm"><%= arrvlItem.prdct_nm %></td>
                <td class="arrvl__cost"><%= arrvlItem.cost %></td>
                <td class="arrvl__trade_num"><%= arrvlItem.trade_num %></td>
                <td class="arrvl__trade_date"><%= arrvlItem.trade_date %></td>
              </tr>
            <% }); %>
          </table>
        </div>
    </div>
    <form action="/arrvl_hstry" method="post" class="arrvl_hstry-form" name="delete_hstry">
        <span class="label">id：</span>
        <input type="number" name="arrvl_id" class="input" required>
        <input type="hidden" name="_method" value="delete">
        <br>
        <br>
        <button type="submit" class="submit" id="delete_hstry_button">削除</button>
        <br>
    </form>
  </body>
</html>
