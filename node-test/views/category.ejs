<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compotible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script>
    </script>
  </head>
  <body>
    <header>
      <h1>AkinoStore</h1>
      <nav id="global_navi">
        <ul>
          <li class="current"><a href='/mst_menu'>マスタ登録・修正</a></li>
          <li><a href="/arrvl_menu">仕入登録・修正</a></li>
          <li><a href="/sales_menu">売上登録・修正</a></li>
          <li><a href="/sales_check">売上確認</a></li>
          <li><a href='/invntry_check'>在庫確認</a></li>
        </ul>
      </nav>
    </header>
    <div class="wrapper">
      <div align="center">
        <table rules="all">
          <tr>
            <th>カテゴリID</th>
            <th>カテゴリコード</th>
            <th>カテゴリ名</th>
          </tr>
          <% categoryList.forEach(function(categoryItem){ %>
            <tr>
              <td class="category__cat_id"><%= categoryItem.cat_id %></td>
              <td class="category__cat_cd"><%= categoryItem.cat_cd %></td>
              <td class="category__cat_nm"><%= categoryItem.cat_nm %></td>
            </tr>
          <% }); %>
        </table>
      </div>
      <br>
      <br>
      <form action="/category" method="post" class="category-form">
        <span class="label">コード：</span><input type="text" name="cat_cd" class="input" required><br>
        <br>
        <span class="label">名称：</span><input type="text" name="cat_nm" class="input" required><br>
        <br>
        <button type="submit" class="submit">登録</button>
        <br>
      </form>
      <br>
      <form action="/category" method="post" class="category-form" name="delete_category">
        <span class="label">id：</span>
        <input type="text" name="cat_id" class="input" required>
        <input type="hidden" name="_method" value="delete">
        <br>
        <br>
        <button type="submit" class="submit" id="delete_category_button">削除</button>
        <br>
      </form>
      <a href="/mst_menu">戻る</a>
    </div>
  </body>
</html>
