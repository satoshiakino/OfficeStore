<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compotible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <h1>AkinoStore</h1>
      <nav id="global_navi">
        <ul>
          <li class="current"><a href="/mst_menu">マスタ登録・修正</a></li>
          <li><a href="/arrvl_menu">仕入登録・修正</a></li>
          <li><a href="/sales_menu">売上登録・修正</a></li>
          <li><a href="/sales_check">売上確認</a></li>
          <li><a href='/invntry_check'>在庫確認</a></li>
        </ul>
      </nav>
    </header>
    <div class="wrapper">
      <div align="center">
      <table rules="all">
        <tr>
          <th>商品ID</th>
          <th>カテゴリコード</th>
          <th>カテゴリ名</th>
          <th>JAN</th>
          <th>商品名</th>
          <th>売価</th>
        </tr>
        <% prdctList.forEach(function(prdctItem){ %>
          <tr class="main-list__item">
            <td class="prdct_mst__prdct_id"><%= prdctItem.prdct_id %></td>
            <td class="prdct_mst__cat_cd"><%= prdctItem.cat_cd %></td>
            <td class="prdct_mst__cat_nm"><%= prdctItem.cat_nm %></td>
            <td class="prdct_mst__jan"><%= prdctItem.jan %></td>
            <td class="prdct_mst__prdct_nm"><%= prdctItem.prdct_nm %></td>
            <td class="prdct_mst__price"><%= prdctItem.price %></td>
          </tr>
        <% }); %>
      </table>
      </div>
    </div>
    <form action="/prdct_mst" method="post" class="prdct_mst-form" name="delete_prdct" align="center">
      <span class="label">id：</span>
      <input type="number" name="prdct_id" class="input" required>
      <br>
      <br>
      <button type="submit" class="submit" id="update_prdct_button">変更</button>
      <br>
    </form>
  </body>
</html>
